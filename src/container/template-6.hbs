<header class="header">
    <a href="#test" class="">
        {{> logo}}
    </a>

    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    {{#with info}}
    <div class="info">
        <h1 class="info_title">{{title}}</h1>
        <p class="info_text">{{description}}</p>
    </div>
    {{/with}}

    {{#with form}}
    <form class="form">
        <h2 class="form_title">{{title}}</h2>

        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" id="{{id}}" name="{{name}}" placeholder="{{placeholder}}" class="form_input">
            {{/each}}
        </div>

        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>

        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>

<div class="updates">
    {{#with updates}}
    <h1 class="updates_title">{{title}}</h1>
    {{#each list}}
    <div class="updates_contents">
        <span class="updates_button">
            {{#with ../show_all}}
            <a href="{{url}}">{{text}}</a>
            {{/with}}
        </span>
        <strong class="updates_name">{{nickname}}</strong>
        <p class="updates_text">{{description}}</p>
    </div>
    {{/each}}
    <a href="#" class="updates_link">All messages</a>
    {{/with}}
</div>

{{#with expirience}}
<div class="expirience">
    <div class="expirience_content">
        <h2>{{title}}</h2>
        <button>{{badge}}</button>
    </div>
    {{#each list}}
    <div class="expirience_list">
        <strong>{{name}}</strong>
        <p>{{details}}</p>
    </div>
    {{/each}}
</div>
{{/with}}

<footer class="footer" id="test">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>